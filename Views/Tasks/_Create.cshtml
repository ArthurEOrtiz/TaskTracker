@using TaskTracker.ViewModels
@model TaskTracker.Models.UserTask
@{
  var viewModel = new TaskFormViewModal
      {
        Action = "Create",
        ButtonText = "Create Task",
        FormId = "createForm",
        UserTask = new UserTask()
      };
}

<div class="modal fade"
     id="createTaskModal"
     tabindex="-1"
     aria-labelledby="createModal"
     aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"
            id="createModal">
          Create Task
        </h5>
        <button type="button"
                class="btn-close"
                data-bs-dismiss="modal"
                aria-label="Close">
        </button>
      </div>
      <div class="modal-body">
        @await Html.PartialAsync("_Form", viewModel)
      </div>
    </div>
  </div>
</div>
